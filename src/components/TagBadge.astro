---
import { getTagCN, getTagEN } from "../utils/postHelper";
import "../styles/badges.css";

interface Props {
    tag: string;
}

const { tag } = Astro.props;
const tagCN = getTagCN(tag);
const tagEN = getTagEN(tag);
---

<span class="badge" data-variant="tag">
    <span class="tag-content" data-cn={tagCN} data-en={tagEN}>{tagCN}</span>
</span>

<style>
    .badge[data-variant="tag"] {
        --badge-bg: #2d333b;
        --badge-border: rgba(240, 246, 252, 0.1);
        --badge-fg: #c9d1d9;
    }

    :global(.light) .badge[data-variant="tag"] {
        --badge-bg: #f6f8fa;
        --badge-border: #d0d7de;
        --badge-fg: #24292f;
    }
</style>
