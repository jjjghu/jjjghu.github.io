---
import { UI_TEXT } from "../i18n/ui";

interface Props {
  activeCategory?: string;
}

const { activeCategory } = Astro.props;
---

<header class="site-header">
  <div class="header-inner">
    <div class="header-title-row">
      <a href="/" class="site-title">
        <span
          data-cn={UI_TEXT.header_title_prefix.cn}
          data-en={UI_TEXT.header_title_prefix.en}
          >{UI_TEXT.header_title_prefix.cn}</span
        ><span
          class="accent-text"
          data-cn={UI_TEXT.header_title_accent.cn}
          data-en={UI_TEXT.header_title_accent.en}
          >{UI_TEXT.header_title_accent.cn}</span
        >
      </a>
      <nav class="header-nav-row">
        <ul class="nav-links">
          <li>
            <a
              href="/"
              class="nav-link"
              data-category="leetcode"
              data-cn={UI_TEXT.nav_leetcode.cn}
              data-en={UI_TEXT.nav_leetcode.en}>{UI_TEXT.nav_leetcode.cn}</a
            >
          </li>
          <li>
            <a
              href="/?category=zerojudge"
              class="nav-link"
              data-category="zerojudge"
              data-cn={UI_TEXT.nav_zerojudge.cn}
              data-en={UI_TEXT.nav_zerojudge.en}>{UI_TEXT.nav_zerojudge.cn}</a
            >
          </li>
          <li>
            <a
              href="/roadmap"
              class="nav-link"
              data-category="roadmap"
              data-cn={UI_TEXT.nav_roadmap.cn}
              data-en={UI_TEXT.nav_roadmap.en}>{UI_TEXT.nav_roadmap.cn}</a
            >
          </li>
          <li>
            <a
              href="/guide"
              class="nav-link"
              data-category="guide"
              data-cn={UI_TEXT.nav_guide.cn}
              data-en={UI_TEXT.nav_guide.en}>{UI_TEXT.nav_guide.cn}</a
            >
          </li>
          <li>
            <a
              href="https://gjplieqszy7.sg.larksuite.com/wiki/KJC1wRJAqidzAqkpCEClyp2YgUf?from=from_copylink"
              class="nav-link"
              data-cn={UI_TEXT.nav_note.cn}
              data-en={UI_TEXT.nav_note.en}>{UI_TEXT.nav_note.cn}</a
            >
          </li>
        </ul>
        <script is:inline>
          (function () {
            const pathname = window.location.pathname;
            const params = new URLSearchParams(window.location.search);
            const categoryParam = params.get("category");

            // 判斷當前應該 active 的分類
            let currentCategory = "";

            // 判斷是否在 roadmap 頁面 (相容結尾有沒有斜線)
            if (pathname.includes("/roadmap")) {
              currentCategory = "roadmap";
            }
            // 判斷是否在 guide 頁面
            else if (pathname.includes("/guide")) {
              currentCategory = "guide";
            }
            // 判斷是否在首頁且參數為 zerojudge
            else if (categoryParam === "zerojudge") {
              currentCategory = "zerojudge";
            }
            // 判斷是否在首頁且沒有其他參數
            else if (pathname === "/" || pathname === "") {
              currentCategory = "leetcode";
            }

            const links = document.querySelectorAll(".nav-link");
            links.forEach((link) => {
              // 若該按鈕的 dataset.category 吻合當前狀態，則加上 active
              if (
                link.dataset.category &&
                link.dataset.category === currentCategory
              ) {
                link.classList.add("active");
              } else {
                link.classList.remove("active");
              }
            });
          })();
        </script>
      </nav>
    </div>
  </div>
</header>

<style>
  .site-header {
    background-color: color-mix(
      in srgb,
      var(--color-canvas-default) var(--bg-overlay-alpha),
      transparent
    );
    border-bottom: 1px solid var(--color-border-muted);
    /* 這裡控制 Header 的總高度，上下 padding 一樣就會置中 */
    padding: 1.5rem 0;
    margin-bottom: 1rem;
  }

  .header-inner {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
    height: 100%; /* 確保高度充滿 */
  }

  /* 第一行樣式 */
  .header-title-row {
    display: flex;
    justify-content: space-between;

    /* [關鍵] 讓標題與導航連結垂直置中對齊 */
    align-items: center;

    /* [關鍵] 移除原本的 margin-bottom，消除下方多餘空白 */
    margin-bottom: 0;
  }

  .site-title {
    font-size: 1.8rem;
    font-weight: 800;
    color: var(--color-fg-default);
    text-decoration: none;
    letter-spacing: 1px;
    /* 移除行高造成的額外偏移，或是設為 1 */
    line-height: 1;
    display: flex;
    align-items: center;
  }

  .accent-text {
    color: var(--color-accent-fg);
  }

  /* 第二行導航列樣式 */
  .header-nav-row {
    display: flex;
    align-items: center; /* 確保導航內的項目也是垂直置中 */
  }

  .nav-links {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    gap: 1.5rem;
    align-items: center; /* 確保 li 垂直置中 */
  }

  .nav-links a {
    color: var(--color-fg-default);
    font-weight: 600;
    font-size: 0.95rem;
    text-transform: uppercase;
    transition: color 0.2s;
    /* 確保連結文字垂直置中 */
    display: flex;
    align-items: center;
    height: 100%;
  }

  .nav-links a:hover,
  .nav-links a.active {
    color: var(--color-accent-fg);
  }

  /* RWD 手機版調整 */
  @media (max-width: 768px) {
    .site-header {
      padding: 1.25rem 0;
    }

    .header-title-row {
      flex-direction: column;
      gap: 0.75rem;
      align-items: center;
    }

    .header-nav-row {
      width: 100%;
      justify-content: center;
      margin-top: 0;
    }

    .nav-links {
      justify-content: center;
      gap: 1.5rem;
      font-size: 0.85rem;
    }

    .site-title {
      font-size: 1.5rem;
      text-align: center;
      white-space: nowrap;
    }
  }
</style>
