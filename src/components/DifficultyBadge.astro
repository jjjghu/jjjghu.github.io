---
import { getDifficultyClass, getDifficultyLabel } from "../utils/difficulty";
import "../styles/badges.css";

interface Props {
    difficulty?: string | null;
}

const { difficulty } = Astro.props;

if (!difficulty) {
    return;
}

const diffClass = getDifficultyClass(difficulty);
const labelCN = getDifficultyLabel(difficulty, false); // 預設中文
const labelEN = getDifficultyLabel(difficulty, true); // 英文
---

<span
    class={`difficulty-badge ${diffClass}`}
    data-cn={labelCN}
    data-en={labelEN}
>
    {labelCN}
</span>
