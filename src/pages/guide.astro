---
import { getEntry, render } from "astro:content";
import Layout from "../layouts/Layout.astro";
import { ARTICLES_COLLECTION } from "../constants.ts";

// 取得 guide.md 資料
const guideEntry = await getEntry(ARTICLES_COLLECTION, "guide");
if (!guideEntry) {
    throw new Error("guide content not found");
}

const { Content, headings } = await render(guideEntry);
---

<Layout
    title={guideEntry.data.title}
    headings={headings}
    activeCategory="guide"
>
    <div class="post-card">
        <div class="post-header-row">
            <h1 id="post-title">
                {guideEntry.data.title}
            </h1>
        </div>

        <article class="article-body">
            <Content />
        </article>
    </div>
</Layout>
